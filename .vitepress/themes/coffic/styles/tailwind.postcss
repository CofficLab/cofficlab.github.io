@tailwind base;
@tailwind components;
@tailwind utilities;

/* 自定义样式 */
.feature-card {
  @apply p-6 rounded-lg bg-white shadow-lg transition-transform hover:transform hover:-translate-y-1;
}

.btn-primary {
  @apply px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors;
}

.btn-secondary {
  @apply px-6 py-3 bg-white text-blue-600 rounded-lg hover:bg-gray-100 transition-colors;
}

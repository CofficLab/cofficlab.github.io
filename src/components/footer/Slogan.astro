---
import { getLangFromPathname } from '@/utils/lang';

const lang = getLangFromPathname(Astro.url.pathname);

const translations = {
  slogan: {
    'zh-cn': '也许，这是一番成就的开始',
    en: 'Perhaps, this is the beginning of achievement',
  },
};

const t = (key: keyof typeof translations) => {
  return translations[key][lang.startsWith('zh') ? 'zh-cn' : 'en'];
};
---

<div class="w-full px-8 z-50 mx-auto">
  <div
    class="mt-0 hero p-4 rounded-2xl text-white dark:text-gray-500
        bg-gradient-to-br
        from-indigo-900/30 via-indigo-800/40 to-indigo-800/50
        dark:from-indigo-900/30 dark:via-indigo-900/40 dark:to-indigo-800/50
        backdrop-blur-3xl
        border-r border-gray-50/30
        dark:border-gray-600/50 dark:border
        hover:ring-0 hover:shadow-2xl
        transform duration-100">
    <div class="text-center hero-content">
      <div class="max-w-md flex flex-row justify-center items-center mx-auto">
        <p class="text-2xl md:text-3xl font-bold">
          {t('slogan')}
        </p>
      </div>
    </div>
  </div>
</div>

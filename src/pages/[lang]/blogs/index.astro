---
import BlogsView from '@/components/views/BlogsView.astro';

// 这里定义了每个语言的博客列表页，并将其作为静态页面预渲染。

export const prerender = true;

export async function getStaticPaths() {
  return [
    {
      params: {
        lang: '/zh-cn',
      },
    },
    {
      params: {
        lang: '/en',
      },
    },
  ];
}

const { lang } = Astro.params;
---

<BlogsView lang={lang} />

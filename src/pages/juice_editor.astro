---
import FooterVue from '../components/Footer.vue';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import JuiceEditorPage from '../components/JuiceEditor/JuiceEditorPage.vue';
import '../styles/hide_main.css';
const lang = Astro.currentLocale ?? 'en';
---

<StarlightPage
  frontmatter={{
    title: 'JuiceEditor',
    description: '简洁编辑器',
    template: 'splash',
    draft: false,
    hero: {
      title: 'JuiceEditor',
      image: {
        file: {
          src: '/images/coffic/logo4.png',
          width: 8,
          height: 7,
          format: 'png',
        },
      },
      actions: [
        {
          text: 'Get Started',
          link: '/juiceeditor/guide/introduce',
        },
      ],
    },
  }}
  hasSidebar={false}
  headings={[]}
/>

<JuiceEditorPage lang={lang} />

<FooterVue lang={lang} />
